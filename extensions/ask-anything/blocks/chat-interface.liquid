{{ 'chat.css' | asset_url | stylesheet_tag }}
<div class="shop-ai-chat-container">
  <div class="shop-ai-chat-window">
    <div class="shop-ai-chat-header">
      <div>{{ 'chat.title' | t }}</div>
    </div>

    <div class="shop-ai-chat-messages">
      <!-- Messages will be added here by JavaScript -->
    </div>

    {%- liquid
      assign questions = '' | split: ''
      assign metafield_key = block.settings.questions_metafield

      if product and metafield_key != blank
        assign metafield_parts = metafield_key | split: '.'
        assign namespace = metafield_parts[0]
        assign key = metafield_parts[1]
        assign metafield_value = product.metafields[namespace][key].value

        if metafield_value and metafield_value.size > 0
          assign questions = metafield_value
        endif
      endif

      if questions.size == 0
        assign questions = block.settings.default_questions | newline_to_br | split: '<br />' | compact
      endif
    -%}

    <script>
      console.log('Ask Anything Metafield Debug:', {
        metafield_key: {{ metafield_key | json }},
        final_questions: {{ questions | json }}
      });
    </script>

    {%- if questions.size > 0 -%}
      <div class="shop-ai-suggested-questions">
        {%- for question in questions -%}
          <div class="shop-ai-suggestion-pill">{{ question }}</div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="shop-ai-chat-input">
      <input type="text" placeholder="{{ 'chat.inputPlaceholder' | t }}">
      <button class="shop-ai-chat-send">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </div>
  </div>
</div>

<script src="{{ 'chat.js' | asset_url }}" defer></script>
<script>
  window.shopChatConfig = {
    promptType: {{ block.settings.system_prompt | json }},
    productDescription: {{ product.description | json }}
  };
  window.shopId = {{ shop.id }};
</script>

{% schema %}
{
  "name": "AI Ask Anything",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "Suggested Questions"
    },
    {
      "type": "textarea",
      "id": "default_questions",
      "label": "Default Questions",
      "info": "Enter one question per line.",
      "default": "What are your best-selling products?\nDo you have any products on sale?\nWhat is your return policy?"
    },
    {
      "type": "text",
      "id": "questions_metafield",
      "label": "Product Questions Metafield",
      "info": "Enter a product metafield key (e.g., custom.questions) to use for suggestions on product pages. This should be a list of single-line text fields."
    },
    {
      "type": "select",
      "id": "system_prompt",
      "label": "System Prompt",
      "options": [
        {
          "value": "standardAssistant",
          "label": "Standard Assistant"
        },
        {
          "value": "enthusiasticAssistant",
          "label": "Enthusiastic Assistant"
        }
      ],
      "default": "standardAssistant"
    }
  ]
}
{% endschema %}
